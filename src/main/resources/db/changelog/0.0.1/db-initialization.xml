		<comment>Create table catalog_filter</comment>
		<createTable tableName="catalog_filter">
			<column name="id" type="BIGINT" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="filter_name" type="${VARCHAR_128}">
				<constraints nullable="false" />
			</column>
			<column name="filter_type_id" type="BIGINT">
